# Hey Boss SaaS Server Configuration
# Copy to .env and fill in your values

# ===================
# Service Provider Credentials (YOUR keys)
# ===================

# Twilio - Your account credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI - Your API key
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Server - Public URL where this server is hosted
PUBLIC_URL=https://api.heyboss.example.com
PORT=3000

# ===================
# Pricing Configuration
# ===================

# Base costs per minute in cents (your actual costs)
TWILIO_COST_PER_MIN=2
WHISPER_COST_PER_MIN=1
TTS_COST_PER_MIN=5

# Price multiplier (2.0 = 100% markup, charge 2x your cost)
PRICE_MULTIPLIER=2.0

# ===================
# API Keys for Users
# ===================
# Format: API_KEY_<key>=<user_phone_number>
# Each user gets an API key that maps to their phone number

API_KEY_sk_test_user1_abc123=+15551234567
API_KEY_sk_test_user2_def456=+15559876543
