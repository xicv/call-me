{
  "name": "callme-mcp",
  "version": "2.0.0",
  "description": "Phone call input for Claude Code - Claude calls you when it needs your input",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "callme-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "dev": "bun --watch src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "phone",
    "voice",
    "twilio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ZeframLou/callme.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "twilio": "^5.3.5",
    "openai": "^4.77.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "bun-types": "latest"
  }
}
